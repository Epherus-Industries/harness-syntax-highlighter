{
  "name": "harness-syntax-highlighter",
  "displayName": "Harness CI/CD Pipeline Syntax Highlighter",
  "description": "Syntax highlighting for Harness CI/CD pipeline YAML files with colorblind-friendly accessibility features, supporting variables, expressions, and pipeline structures",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "yaml",
      "aliases": ["harness", "yaml"],
      "extensions": [".yml",".yaml"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "yaml",
      "scopeName": "source.harness",
      "path": "./syntaxes/yaml.tmLanguage.json"
    }],
    "themes": [{
      "label": "Harness Colorblind Friendly",
      "uiTheme": "vs-dark",
      "path": "./themes/colorblind-friendly.json"
    }]
  },
  "author": {
    "name": "Mike Strid",
    "email": "mike.strid@protonmail.com"
  },
  "publisher": "epherusindustries",
  "repository": {
    "type": "git",
    "url": "https://github.com/Epherus-Industries/harness-syntax-highlighter"
  },
  "keywords": ["harness", "yaml", "syntax", "highlighting", "ci/cd", "pipeline", "colorblind", "accessibility", "a11y"],
  "license": "MIT"
}
